---
interface Props {
  profileImage: string;
  profileLogin: string;
}

const { profileImage, profileLogin } = Astro.props;
---

<div class="profile-container">
  <div class="profile-image">
    <img src={profileImage} alt="profile-image" />
  </div>
  <div class="profile-name">{profileLogin}</div>
</div>

<style>
  div.profile-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-bottom: 30px;
  }

  div.profile-image {
    width: 100%;
    height: 220px;
    border-radius: 50%;
    overflow: hidden;
    margin-bottom: 20px;
  }

  img {
    width: 100%;
    height: 100%;
  }

  div.profile-name {
    font-size: 20px;
    font-weight: 600;
    color: #ffffff;
    text-align: center;
  }
</style>
