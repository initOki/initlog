---
import Navigation from '../components/Navigation/index.astro';
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/initlog.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body>
    <Navigation />
    <main>
      <slot />
    </main>
  </body>
</html>

<style is:global>
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }
  :root {
    --accent: 124, 58, 237;
    --accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);
  }
  html {
    height: 100vh;
    font-family: system-ui, sans-serif;
    /*background-image: url('/17520.webp');*/
    background-color: #cbe7ff;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }
  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New,
      monospace;
  }
  ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
    /*overflow: hidden;*/
  }
  h1 {
    margin: 0;
    padding: 0;
  }
</style>

<style>
  body {
    display: grid;
    grid-template-columns: 300px 1fr;
    gap: 10px;
    padding: 0;
    margin: 0;
    overflow: hidden;
  }

  main {
    height: 98vh;
    margin: 10px 10px 10px 0;
    padding: 20px 30px;
    border-radius: 10px;
    background: rgba(255, 255, 255, 0.5);
    overflow: scroll;
  }
</style>
