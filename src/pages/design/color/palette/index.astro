---
import DesignSystemLayout from '../../../../layouts/DesignSystemLayout.astro';
import { Plum } from '~/utils/design/color/plum';
import { Rose } from '~/utils/design/color/rose';
import { Orange } from '~/utils/design/color/orange';
import { Brown } from '~/utils/design/color/brown';
import { Cyan } from '~/utils/design/color/cyan';
import { Indigo } from '~/utils/design/color/indigo';

const title = 'Palette';
---

