---
import DesignSystemLayout from '../../../../layouts/DesignSystemLayout.astro';
import { Layout } from '../../../../utils/design/grid/layout';

const title = 'Layout';
---

<DesignSystemLayout>
  <div class="border-b-2 mb-[30px]">
    <h1>{title}</h1>
  </div>
  <div>
    {
      Layout.map((item) => {
        return (
          <div class="border-b-2 pt-[15px] pb-[15px]">
            <span class="block text-[22px] mb-[10px]">{item.name}</span>

            <div class="flex">
              {item.styles.map((style) => {
                return (
                  <span class="mr-[20px] text-[14px] text-slate-400">
                    {style.name} : {style.value}
                  </span>
                );
              })}
            </div>
          </div>
        );
      })
    }
  </div>
</DesignSystemLayout>
